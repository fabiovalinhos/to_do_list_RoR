<% {'Pendentes': @pending_tasks, 'Finalizados': @finished_tasks}.each do |nome,tasks| %>
  <h3><%= nome %></h3>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Feito?</th>
        <th scope="col">Nome</th>
        <th scope="col">Detalhes</th>
        <th scope="col">Prazo</th>
        <th scope="col">Categoria</th>
        <th scope="col">Criado em</th>
        <th scope="col">Atualizado em</th>
        <th scope="col">&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% tasks.each do |task| %>
        <tr>
          <td><%= task.done? ? '√' : '-' %></td>
          <td><%= task.name %></td>
          <td><%= task.details %></td>
          <td><%= task.due_date %></td>
          <td><%= task.category.name %></td>
          <!-- <td><%= task.created_at.strftime("%Y-%m-%d") %></td> -->
          <td><%= l task.created_at, format: :short %></td>
          <td><%= l task.updated_at, format: :short %></td>
          <td>
            <%= link_to 'Editar', edit_task_path(task), class:'btn btn-success' %>
            <%= link_to 'Apagar', task_path(task), method: :delete, class: 'btn btn-danger', data: {confirm: 'Você tem certeza?'} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
